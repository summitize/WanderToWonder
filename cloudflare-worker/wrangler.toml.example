name = "wander-to-wonder-photos"
main = "src/index.js"
compatibility_date = "2026-02-19"

[vars]
# JSON map of trip key to OneDrive shared URL
# Keep keys lowercase to match ?trip=<key>
TRIP_SHARE_URLS_JSON = "{\"australia\":\"https://1drv.ms/a/c/...\"}"
MS_TENANT = "consumers"
MS_SCOPE = "Files.Read offline_access"

# Secrets (set via CLI, do not commit):
# MS_CLIENT_ID
# MS_REFRESH_TOKEN
# Optional:
# MS_CLIENT_SECRET
